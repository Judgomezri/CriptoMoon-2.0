#:import Clipboard kivy.core.clipboard.Clipboard

<MenuScreen>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Image:
            source: "fromMoon.jpg"
            allow_stretch: True
            keep_ratio: False
        BoxLayout:
            spacing: 15
            orientation: "vertical"
            size_hint: .8, .5
            Image:
                source: "Logo.png"
                width: 1
            Label:
            Button:
                text: 'Llave Pública'
                on_press: root.manager.current = 'LlavePublica'
                width: .5

            Button:
                text: 'Imágenes'
                on_press: root.manager.current = 'Imagenes'
                width: .5
            
            Button:
                text: 'Moon Coins'
                on_press: 
                    root.manager.current = 'Blockchain'
                    root.Full_Blockchain()
                width: .5
                    
            Button:
                text: 'Quit'
                width: .5
                on_press: app.stop()
        

<LlavePublica_Screen>:
    Image:
        source: "space.jpg"
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        spacing: 10
        padding: 15, 15
        orientation: "vertical"
        GridLayout:
            cols: 2
            #Opciones de Cifrado
            GridLayout:
                spacing: 10, 10
                cols: 2
                Label:
                    text: "Cifrador "
                Spinner:
                    id: cifrador
                    text: "Seleccione una opción..."
                    values: ["RSA","Rabin", "ElGamal", "Menezes Vanestone"]
                    on_text: root.spinner_clicked(cifrador.text, data, primo1, primo2, data1, data2, data3, data4, data5)
                Label:
                    text: "Primo 1"
                TextInput:
                    id: primo1
                    disabled: not data.visible
                Label:
                    text: "Primo 2"
                TextInput:
                    id: primo2   
                    disabled: False if (cifrador.text!="ElGamal" and cifrador.text!="Menezes Vanestone") and data.visible else True  
                Button:
                    text: 'Generar Primos'
                    on_press: root.generarPrimos(cifrador.text, primo1,primo2)
                Button:
                    text: 'Generar Datos'
                    on_press: root.generarDatos(cifrador.text, primo1,primo2, data1, data2, data3, data4, data5)

            #Datos Generados
            GridLayout:
                id : data
                visible: False
                spacing: 10, 10
                cols: 2
                Label:
                    text: "n" if (cifrador.text == "RSA" or cifrador.text=="Rabin") else "α" if cifrador.text=="ElGamal" else "a" if cifrador.text=="Menezes Vanestone"  else ""
                    size_hint_x: .4 if data.visible else 0
                    opacity: 1 if cifrador.text != "" else 0
                TextInput:
                    id: data1
                    size_hint_x: 1 if data.visible else 0
                    opacity: 1 if data.visible else 0
                    disabled: not data.visible
                Label:
                    text: "Φ(n)" if cifrador.text == "RSA" else "β" if cifrador.text=="ElGamal" else "b" if cifrador.text=="Menezes Vanestone"  else ""
                    size_hint_x: .4 if data.visible else 0
                    opacity: 1 if data.visible and cifrador.text!="Rabin" else 0
                TextInput:
                    id: data2
                    size_hint_x: 1 if data.visible else 0
                    opacity: 1 if data.visible and cifrador.text!="Rabin" else 0
                    disabled: not data.visible
                Label:
                    text: "Clave Pública" if cifrador.text == "RSA" else "Data 2 Rabin" if cifrador.text=="Rabin" else "p" if cifrador.text=="Menezes Vanestone"  else ""
                    size_hint_x: .4 if data.visible and cifrador.text!="Menezes Vanestone" else 0
                    size_hint_y: 1 if data.visible and cifrador.text!="Menezes Vanestone" else 0
                    opacity: 1 if data.visible and cifrador.text!="Rabin" and cifrador.text!="ElGamal" and cifrador.text!="Menezes Vanestone" else 0
                TextInput:
                    id: data3
                    size_hint_x: 1 if data.visible and cifrador.text!="Menezes Vanestone" else 0
                    size_hint_y: 1 if data.visible and cifrador.text!="Menezes Vanestone" else 0
                    opacity: 1 if data.visible and cifrador.text!="Rabin" and cifrador.text!="ElGamal" and cifrador.text!="Menezes Vanestone" else 0
                BoxLayout:
                    spacing: 10
                    size_hint_x: 1 if cifrador.text=="Menezes Vanestone" else 0
                    opacity: 1 if cifrador.text=="Menezes Vanestone" else 0
                    Label:
                        text: "gx"
                        size_hint_x: .4 
                    TextInput:
                        id: data4
                        size_hint_x: 1
                BoxLayout:
                    spacing: 10
                    size_hint_x: 1 if cifrador.text=="Menezes Vanestone" else 0
                    opacity: 1 if cifrador.text=="Menezes Vanestone" else 0
                    Label:
                        text: "gy"
                        size_hint_x: .4 
                    TextInput:
                        id: data5
                        size_hint_x: 1

        #Cifrar
        GridLayout:
            cols: 2
            spacing: 15, 15
            Label: 
                text: "Texto"
                size_hint: 1, .3
            Label:
                text: "Resultado"
                size_hint: 1, .3
            TextInput:
                border: 5,5,5,5
                id: Texto
            TextInput:
                id: Resultado
        #Botones de cifrado
        GridLayout:
            size_hint: 1,.3
            cols: 5
            spacing: 10, 10
            Button:
                text: "Cifrar"
                on_press: root.cifrar(cifrador.text, primo1,primo2, data1, data2, data3, data4, data5, Texto, Resultado)
            Button:
                text: "Descifrar"
                on_press: root.descifrar(cifrador.text, primo1,primo2, data1, data2, data3, data4, data5, Texto, Resultado)
            Button:
                text: "Pegar"
                on_release: Texto.text = Clipboard.paste()
            Button:
                text: "Limpiar"
                on_release: 
                    Texto.text=""
                    Resultado.text=""
            Button:
                text: "Copiar"
                on_release: Clipboard.copy(Resultado.text)
        Label:
            size_hint: 1, .2
        
        GridLayout:
            size_hint: 1,.3
            cols: 2
            spacing: 10, 10

            Button:
                pos_hint: {"center_x": .5}
                size_hint:.5, .2
                text: 'Volver al menú'
                on_press: root.manager.current = 'menu'
            
            Button:
                pos_hint: {"center_x": .5}
                size_hint:.5, .2
                text: 'Firma Digital'
                on_press: root.manager.current = 'FirmaDigital'
        

<FirmaDigital_Screen>:
    Image:
        source: "space.jpg"
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        id: box
        spacing: 10
        padding: 15, 15
        orientation: "vertical"
        GridLayout:
            cols: 2
            spacing: 10, 10
            padding: 15, 15 
            size_hint: 1, .6
            Label:
                text: "Cifrador"
                size_hint: 1, .5
            Spinner:
                id: cifrador
                text: "Seleccione una opción..."
                values: ["RSA", "ElGamal", "Menezes Vanestone"]
        GridLayout:
            size_hint: 1, .6
            cols: 3
            spacing: 10, 10
            padding: 15, 15 
            Label:
                size_hint_x: .3 
                text: "Ruta"
            TextInput:
                id: ruta
                text: files.path     
            Button:
                size_hint_x: .3 
                text: "Ir"
                on_release: root.aplicarRuta(ruta, files)
        GridLayout:
            cols:2
            spacing: 10, 10
            padding: 15, 15 
            FileChooser:
                id: files
                FileChooserIconLayout
                FileChooserListLayout
            BoxLayout:
                orientation: "vertical"
                size_hint: .1, .5
                Button:
                    id: change 
                    text: "List"
                    on_release: change.text, files.view_mode=root.changeStyle(change.text)
                Label:
                Label:
        GridLayout:
            cols: 2
            spacing: 10, 10
            padding: 15, 15 
            size_hint: 1, .6
            Button:
                text: "Firmar"
                size_hint: 1, .5
                on_release: root.firmar(files.selection, cifrador.text, clave)
            Button:
                text: "Verificar"
                size_hint: 1, .5
                on_release: root.verificar(files.selection, cifrador.text, clave)
        Label:
            size_hint: 1,.1
            text: "Firma"
        TextInput:
            id: clave
        Button:
            pos_hint: {"center_x": .5}
            size_hint:.5, .5
            text: 'Volver'
            on_press: root.manager.current = 'LlavePublica'

<Popup_Screen>
    on_open:
        mensaje.text = root.getText()
    title: "Aviso"
    auto_dismiss: False
    size_hint: 0.7, 0.4
    pos_hint: {"x": 0.2, "Center": 0.8}
    BoxLayout:
        spacing: 10
        padding: 15, 15
        orientation: "vertical"
        Label: 
            id: mensaje
            text: ""
        Button:
            text: 'Cerrar'
            on_release: root.dismiss()

<Imagenes_Screen>:
    Image:
        source: "space.jpg"
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        spacing: 15
        padding: 5
        orientation: "vertical"
        BoxLayout:
            spacing: 15
            padding: 15
            BoxLayout:
                orientation: "vertical"
                spacing: 15
                Image:
                    id: image
                    opacity: .6
                Button:
                    pos_hint: {"center_x": .5}
                    size_hint:.5, .1
                    text: 'Cargar'
                    on_press: 
                        image.source = str(files.selection[0])
                        image.opacity= 1
            BoxLayout:
                orientation: "vertical"
                spacing: 15
                Image:
                    id: A
                    opacity: .6
                Label:
                    size_hint: 1, .1
                    text: "Imagen 1 "
                
            BoxLayout:
                orientation: "vertical"
                spacing: 15
                Image:
                    id: B
                    opacity: .6
                Label:
                    size_hint: 1, .1
                    text: "Imagen 2: "

        #Botones de cifrado
        GridLayout:
            size_hint: 1,.1
            cols: 3
            spacing: 10, 10
            Button:
                text: "Cifrar"
                on_press: 
                    root.cifrar(image, A, B)
            Button:
                text: "Mostrar Resultado"
                on_press:
                    image.source = "T1T2.jpg"
                    image.opacity= 1
            Button:
                text: "Limpiar"
                on_release: 
                    image.source = ""
                    image.opacity= .6
                    A.source = ""
                    A.opacity= .6
                    B.source = ""
                    B.opacity= .6

        BoxLayout:
            size_hint: 1,.1
            Label:
                size_hint: .2,1
                text: "Ruta"
            TextInput:
                id: ruta
                text: files.path
            Button:
                size_hint: .2, 1
                text: "Ir"
                on_release: files.path=ruta.text
        GridLayout:
            size_hint: 1, .3
            cols:2
            spacing: 10, 10
            padding: 15, 15
            FileChooser:
                id: files
                FileChooserIconLayout
                FileChooserListLayout
            BoxLayout:
                orientation: "vertical"
                size_hint: .1, .5
                Button:
                    id: change 
                    text: "List"
                    on_release: change.text, files.view_mode=root.changeStyle(change.text)
                Label:
                Label:
        Button:
            pos_hint: {"center_x": .5}
            size_hint:.5, .1
            text: 'Volver al menú'
            on_press: root.manager.current = 'menu'

<Blockchain_Screen>:
    Image:
        source: "space.jpg"
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        spacing: 15
        padding: 5
        size_hint:.9, 1
        pos_hint: {"center_x": .5}
        orientation: "vertical"
        BoxLayout:
            spacing: 15
            padding: 5
            size_hint:1, .1
            Label:
                text: "Usuario"
            Spinner:
                id: nombre
                text: "..."
                values: ["Daniel", "Juan", "Carlos", "Agustin"]
            Label:
                text: "Destinatario"
            Spinner:
                id: dest
                text: "..."
                values: ["Daniel", "Juan", "Carlos", "Agustin"]
            Label:
                text: "Cantidad"
            TextInput:
                id: cant
            Button:
                text: "Aplicar"
                on_press: root.transaccion(nombre.text, dest.text, cant.text, trans)
        Label:
            pos_hint: {"left": .5}
            size_hint:.3, .1
            text: "Transacciones"
        TextInput:
            id: trans
        BoxLayout:
            spacing: 40
            padding: 5
            size_hint:1, .1
            Button:
                size_hint:1, 1
                text: 'Minar'
                on_press: 
                    root.Minar(trans)
            Button:
                size_hint: 1, 1
                text: 'Mostrar Blockchain'
                on_press: root.manager.current = 'Full_Blockchain'
        Button:
            pos_hint: {"center_x": .5}
            size_hint:.5, .1
            text: 'Volver al menú'
            on_press: root.manager.current = 'menu'

<Full_Blockchain_Screen>:
    Image:
        source: "space.jpg"
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        spacing: 15
        padding: 5
        size_hint:.9, 1
        pos_hint: {"center_x": .5}
        orientation: "vertical"
        Label:
            text: "Blockchain Completo"
            size_hint:.5, .1
            pos_hint: {"left": .5}
        TextInput:
            id: block
            text: root.space.text
        Button:
            pos_hint: {"center_x": .5}
            size_hint:.5, .1
            text: 'Volver'
            on_press: root.manager.current = 'Blockchain'